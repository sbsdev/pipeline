<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec" script="../../main/resources/xml/xproc/dtbook-validate.xpl" xmlns:p="http://www.w3.org/ns/xproc" xmlns:c="http://www.w3.org/ns/xproc-step"
    xmlns:px="http://www.daisy.org/ns/pipeline/xproc" xmlns:d="http://www.daisy.org/ns/pipeline/data" xmlns:epub="http://www.idpf.org/2007/ops" xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:opf="http://www.idpf.org/2007/opf">

    <x:scenario label="px:nordic-dtbook-validate">
        <x:call step="px:nordic-dtbook-validate">
            <x:option name="dtbook" select="resolve-uri('../resources/DTBook/C00000.xml',base-uri())"/>
            <x:option name="html-report" select="concat($temp-dir,'html-report/')"/>
        </x:call>

        <x:context label="validation-status">
            <x:document type="port" port="validation-status"/>
        </x:context>
        <x:expect type="compare" label="DTBook/C00000.xml should be valid">
            <x:document type="inline">
                <d:validation-status result="ok"/>
            </x:document>
        </x:expect>

        <x:context label="html-report - publication statistics">
            <x:document type="file" base-uri="temp-dir" href="html-report/report.xhtml" method="xml" select="//html:tbody[html:tr/html:td[starts-with(text(),'element: ')]]"/>
        </x:context>
        <x:expect label="there should be exactly one table containing statistics of elements and classes" type="count" min="1" max="1"/>
        <x:expect label="The publication statistics should contain stuff" type="xpath" test="count(//html:tr) &gt; 0"/>

    </x:scenario>
    
    <x:scenario label="px:nordic-dtbook-validate - validating an invalid DTBook">
        <x:call step="px:nordic-dtbook-validate">
            <x:option name="dtbook" select="resolve-uri('../resources/DTBook.invalid/C00000.invalid.xml',base-uri())"/>
            <x:option name="html-report" select="concat($temp-dir,'html-report/')"/>
        </x:call>
        
        <x:context label="validation-status">
            <x:document type="port" port="validation-status"/>
        </x:context>
        <x:expect type="compare" label="DTBook.invalid/C00000.invalid.xml should be invalid">
            <x:document type="inline">
                <d:validation-status result="error"/>
            </x:document>
        </x:expect>
        
    </x:scenario>

</x:description>
