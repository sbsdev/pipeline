  <x:scenario label="multiscripts">
    <x:call step="px:mathml-to-ssml">
      <x:input port="source">
	<x:document type="inline">
	  <math xml:lang="en" id="m1">
	    <mmultiscripts>
	      <mi>X</mi>      <!-- base expression -->
