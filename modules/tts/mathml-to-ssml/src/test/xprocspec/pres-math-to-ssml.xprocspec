	      <mi>c</mi>      <!-- postsuperscript1 -->
	      <mn>1</mn>      <!-- postsubscript2 -->
	      <mn>2</mn>      <!-- postsuperscript2 -->
	      <mprescripts/>
	      <mi>b</mi>      <!-- presubscript -->
	      <mi>a</mi>      <!-- presuperscript -->
