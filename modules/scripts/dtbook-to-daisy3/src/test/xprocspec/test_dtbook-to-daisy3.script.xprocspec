						<c:file name="mo0.smil"/>
						<c:file name="navigation.ncx"/>
						<c:file name="resources.res"/>
						<c:file name="shuffled_7019_xmldtbook_1.xml"/>
					</c:directory>
				</x:document>
			</x:expect>
		</x:scenario>
		<x:scenario label="with-audio">
