    <div>
        <define name="z3998.meta">
            <element name="meta">
                <a:documentation>The meta element expresses metadata information about the document, a document fragment or an external resource associated with the document. The meta element accepts attributes from the RDFa attributes collection for capturing the metadata information. </a:documentation>
                <ref name="z3998.meta.attlist.content"/>
                <sch:rule context="default:meta[@content]">
                    <sch:assert test="string-length(normalize-space(@content)) &gt; 0">The meta content attribute must neither be empty nor contain only whitespace. </sch:assert>
                </sch:rule>
            </element>
        </define>
        <define name="z3998.meta.attlist.content">
            <ref name="z3998.Core.attrib"/>
            <ref name="z3998.I18n.attrib"/>
            <choice>
                <group>
                    <ref name="rdfa.rel.attrib"/>
                    <ref name="rdfa.resource.attrib"/>
                    <zeroOrMore>
                        <ref name="z3998.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.rev.attrib"/>
                    <ref name="rdfa.resource.attrib"/>
                    <zeroOrMore>
                        <ref name="z3998.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="rdfa.content.attrib"/>
                    <zeroOrMore>
                        <ref name="z3998.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="rdfa.content.attrib"/>
                    <zeroOrMore>
                        <ref name="z3998.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.typeof.attrib"/>
                    <ref name="rdfa.content.attrib"/>
                    <zeroOrMore>
                        <ref name="z3998.meta"/>
                    </zeroOrMore>
                </group>
                <group>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="z3998.Phrase.Text.mix.model"/>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.property.attrib"/>
                    <ref name="z3998.Phrase.Text.mix.model"/>
                </group>
                <group>
                    <ref name="rdfa.about.attrib"/>
                    <ref name="rdfa.typeof.attrib"/>
                    <ref name="z3998.Phrase.Text.mix.model"/>
                </group>
                <group>
                    <ref name="rdfa.typeof.attrib"/>
                    <zeroOrMore>
                        <ref name="z3998.meta"/>
                    </zeroOrMore>
                </group>
                <ref name="rdfa.typeof.attrib"/>
            </choice>
        </define>
        <define name="z3998.meta.attlist.base">
            <ref name="Rdfa.attrib"/>
            <ref name="z3998.Core.attrib"/>
            <ref name="z3998.I18n.attrib"/>
        </define>
        <define name="z3998.meta.content.base">
            <choice>
                <empty/>
                <zeroOrMore>
                    <ref name="z3998.meta"/>
                </zeroOrMore>
                <ref name="z3998.Phrase.Text.mix.model"/>
            </choice>
        </define>
    </div>
</grammar>