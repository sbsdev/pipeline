<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec" script="../../main/resources/xml/xproc/fileset-diff.xpl" xmlns:p="http://www.w3.org/ns/xproc" xmlns:c="http://www.w3.org/ns/xproc-step"
    xmlns:px="http://www.daisy.org/ns/pipeline/xproc" xmlns:d="http://www.daisy.org/ns/pipeline/data" xmlns:epub="http://www.idpf.org/2007/ops" xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:opf="http://www.idpf.org/2007/opf">

    <x:scenario label="test">
        <x:call step="px:fileset-diff">
            <x:input port="source">
                <x:document type="inline">
                    <d:fileset xml:base="file:///Users/me/dir">
                        <d:file href="doc1.html"/>
                        <d:file href="doc2.html"/>
                    </d:fileset>
                </x:document>
            </x:input>
            <x:input port="secondary">
                <x:document type="inline">
                    <d:fileset xml:base="file:///Users/me/dir">
                        <d:file href="doc2.html"/>
                    </d:fileset>
                </x:document>
            </x:input>
        </x:call>
        <x:context label="the result port">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect type="compare" label="the result should be as expected">
            <x:document type="inline">
                <d:fileset xml:base="file:///Users/me/dir">
                    <d:file href="doc1.html"/>
                </d:fileset>
            </x:document>
        </x:expect>
    </x:scenario>
    <x:scenario label="no-base">
        <x:call step="px:fileset-diff">
            <x:input port="source">
                <x:document type="inline">
                    <d:fileset>
                        <d:file href="doc1.html"/>
                        <d:file href="doc2.html"/>
                    </d:fileset>
                </x:document>
            </x:input>
            <x:input port="secondary">
                <x:document type="inline">
                    <d:fileset>
                        <d:file href="doc2.html"/>
                    </d:fileset>
                </x:document>
            </x:input>
        </x:call>
        <x:context label="the result port">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect type="compare" label="the result should be as expected">
            <x:document type="inline">
                <d:fileset>
                    <d:file href="doc1.html"/>
                </d:fileset>
            </x:document>
        </x:expect>
    </x:scenario>
    <x:scenario label="different-base">
        <x:call step="px:fileset-diff">
            <x:input port="source">
                <x:document type="inline">
                    <d:fileset xml:base="file:///Users/me/dir/">
                        <d:file href="doc1.html"/>
                        <d:file href="../doc2.html"/>
                    </d:fileset>
                </x:document>
            </x:input>
            <x:input port="secondary">
                <x:document type="inline">
                    <d:fileset xml:base="file:///Users/me/">
                        <d:file href="doc2.html"/>
                    </d:fileset>
                </x:document>
            </x:input>
        </x:call>
        <x:context label="the result port">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect type="compare" label="the result should be as expected">
            <x:document type="inline">
                <d:fileset xml:base="file:///Users/me/dir/">
                    <d:file href="doc1.html"/>
                </d:fileset>
            </x:document>
        </x:expect>
    </x:scenario>


</x:description>
