<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/flow-into.xpl">
  
  <x:scenario label="test_01">
    <x:call step="css:flow-into">
      <x:input port="source">
        <x:document type="inline">
          <body style="text-align:right">
            <note style="display:list-item"
				  css:flow="footnote"
                  css:id="xyz"> foo </note>
          </body>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body style="text-align:right">
          <css:_ css:id="xyz"/>
        </body>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="footnote">
          <note style="display: list-item; text-align: right"
                css:anchor="xyz"> foo </note>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="css:flow-into">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <note css:flow="footnotes" css:id="x"> foo </note>
            <css:footnote-call css:anchor="x" style="content:'aaa'"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <css:footnote-call css:id="x" style="content:'aaa'"/>
        </_>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="footnotes">
          <note css:anchor="x"> foo </note>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call step="css:flow-into">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <div css:id="x"/>
            <css:duplicate css:anchor="x" css:flow="foo"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <div css:id="x"/>
        </_>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="foo">
          <css:duplicate css:anchor="x"/>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:call step="css:flow-into">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <div css:id="x" css:flow="foo"/>
            <css:alternate css:anchor="x"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <css:alternate css:id="x"/>
        </_>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="foo">
          <div css:anchor="x"/>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
