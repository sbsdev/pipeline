<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
   
  <appender name="TEST_LOG" class="ch.qos.logback.core.FileAppender">
    <file>target/test.log</file>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <!--
      Not using org.daisy.pipeline.logging.EventBusAppender because requires OSGi context which
      isn't always available (because of pax-exam-container-forked?). Also because in XProcSpec
      there is no concept of jobs. Instead just appending to console directly.
  -->
  <appender name="TO_EVENTBUS" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="org.daisy.pipeline.logging.ThresholdFilter">
      <rootLevel>INFO</rootLevel>
      <loggerLevels>
        cz.vutbr.web=WARN
        org.daisy.common.xproc.calabash.steps.Message=WARN
        com.xmlcalabash.runtime.XAtomicStep=WARN
        org.daisy.pipeline.pax.exam.Options=OFF
      </loggerLevels>
    </filter>
    <encoder class="org.daisy.maven.xproc.pipeline.logging.ProgressMessageEncoder">
      <pattern>    | %-5level | %msg [%F:%L:%C]%n</pattern>
      <includeProgress>false</includeProgress>
      <filePattern>
        cz.vutbr.web=%X{css.url}
        org.daisy.braille.css=%X{css.url}
      </filePattern>
      <linePattern>
        cz.vutbr.web=%X{css.line}
        org.daisy.braille.css=%X{css.line}
      </linePattern>
      <columnPattern>
        cz.vutbr.web=%X{css.position}
        org.daisy.braille.css=%X{css.position}
      </columnPattern>
    </encoder>
  </appender>
  
  <appender name="FROM_EVENTBUS" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="org.daisy.maven.xproc.pipeline.logging.ProgressMessageEncoder">
      <pattern>    | %-5level | %msg%n</pattern>
      <includeProgress>false</includeProgress>
    </encoder>
  </appender>
  
  <logger name="org.daisy.maven.xproc.pipeline.MessageEventListener" level="INFO" additivity="false">
    <appender-ref ref="FROM_EVENTBUS"/>
  </logger>
  
  <logger name="org.daisy" level="DEBUG"/>
  
  <root level="WARN">
    <appender-ref ref="TEST_LOG"/>
    <appender-ref ref="TO_EVENTBUS"/>
  </root>
  
</configuration>
