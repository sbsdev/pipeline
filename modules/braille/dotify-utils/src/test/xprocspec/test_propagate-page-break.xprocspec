<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/propagate-page-break.xpl">
  
  <x:scenario label="test_01">
    <x:call step="pxi:propagate-page-break">
      <x:input port="source">
        <x:document type="inline">
          <css:box type="block"
                   css:page-break-before="left"
                   css:page-break-after="always">
            <css:box type="block"/>
            <css:box type="block"
                     css:page-break-inside="avoid">
              <css:box type="block"
                       css:page-break-before="avoid">
                <css:box type="inline"/>
              </css:box>
              <css:box type="block"/>
              <css:box type="block"
                       css:page-break-after="always"/>
              <css:box type="block"/>
            </css:box>
            <css:box/>
          </css:box>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:box type="block"
                 css:page-break-before="left"
                 css:page-break-after="always">
          <css:box type="block"/>
          <css:box type="block"
                   css:page-break-before="avoid">
            <css:box type="block"
                     css:page-break-inside="avoid"
                     css:page-break-after="avoid">
              <css:box type="inline"/>
            </css:box>
            <css:box type="block"
                     css:page-break-inside="avoid"
                     css:page-break-after="avoid"/>
            <css:box type="block"
                     css:page-break-inside="avoid"
                     css:page-break-after="always"/>
            <css:box type="block"
                     css:page-break-inside="avoid"/>
          </css:box>
          <css:box/>
        </css:box>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="pxi:propagate-page-break">
      <x:input port="source">
        <x:document type="inline">
          <css:_>
            <css:box type="block">
              <css:box type="block" css:page-break-after="avoid">
                ⠿⠿⠿⠿
              </css:box>
            </css:box>
            <css:box type="block">
              <css:box type="block" css:page-break-before="always">
                ⠿⠿⠿⠿
              </css:box>
            </css:box>
          </css:_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:_>
          <css:box type="block">
            <css:box type="block">
              ⠿⠿⠿⠿
            </css:box>
          </css:box>
          <css:box type="block" css:page-break-before="always">
            <css:box type="block">
              ⠿⠿⠿⠿
            </css:box>
          </css:box>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
