<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>org.daisy.pipeline.modules</groupId>
    <artifactId>modules-parent</artifactId>
    <version>1.12.1-SNAPSHOT</version>
    <relativePath>../../../parent/</relativePath>
  </parent>
  
  <groupId>org.daisy.pipeline.modules.braille</groupId>
  <artifactId>libhyphen-libreoffice-tables</artifactId>
  <version>4.0.0-3-SNAPSHOT</version>
  <packaging>bundle</packaging>
  
  <name>DP2 Braille Modules :: libhyphen-utils :: libhyphen-libreoffice-tables</name>
  
  <dependencies>
    <dependency>
      <groupId>org.daisy.pipeline.modules.braille</groupId>
      <artifactId>libhyphen-core</artifactId>
    </dependency>
  </dependencies>
  
  <properties>
    <expose-services>
      org.daisy.pipeline.braille.libhyphen.impl.LibhyphenTablePath
    </expose-services>
  </properties>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.daisy.pipeline.build</groupId>
        <artifactId>modules-build-helper</artifactId>
        <executions>
          <execution>
            <id>htmlize-sources</id>
            <configuration>
              <sourceDirectory>${project.build.directory}/classes</sourceDirectory>
              <outputDirectory>${project.build.directory}/doc/src/main/resources</outputDirectory>
              <includes>
                hyphen/,
                hyphen/*
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
  <profiles>
    <profile>
      <id>generate-table-files</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>generate-resources</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <mkdir dir="target/checkout"/>
                    <get dest="target/checkout/dictionaries.zip" src="http://cgit.freedesktop.org/libreoffice/dictionaries/snapshot/libreoffice-4.0.0.1.zip" usetimestamp="true" skipexisting="true"/>
                    <unzip dest="target/generated-resources/hyphen" src="target/checkout/dictionaries.zip">
                      <patternset>
                        <include name="**/hyph_*.dic"/>
                      </patternset>
                      <mapper type="flatten"/>
                    </unzip>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
</project>
