#!/bin/sh
# preinst script for daisy-pipeline2
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

SYSTEM_PROPERTIES=${deb.pipeline.home}/etc/system.properties

case "$1" in
    
    install|upgrade)
        
        # ---------------------------------------------------------
        # first install, upgrade or install from Config-Files state
        # ---------------------------------------------------------
        
        # backup and delete old configuration file
        
        [ -e $SYSTEM_PROPERTIES ] && mv $SYSTEM_PROPERTIES $SYSTEM_PROPERTIES.old
        [ -e $SYSTEM_PROPERTIES.bak ] && mv $SYSTEM_PROPERTIES.bak $SYSTEM_PROPERTIES.bak.old
        
    ;;
   
    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
